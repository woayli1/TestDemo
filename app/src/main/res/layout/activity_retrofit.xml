<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/sv_res"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_retrofit_get"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"
                android:text="GET Retrofit请求"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_retrofit_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"
                android:text="POST Retrofit请求"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_retrofit_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"
                android:text="Body Retrofit请求"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_retrofit_path"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"
                android:text="Path Retrofit请求"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_retrofit_headers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"
                android:text="Headrs Retrofit请求"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_retrofit_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"
                android:text="Url Retrofit请求"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_retrofit_converter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"
                android:text="Converter Retrofit请求"
                android:textSize="20sp" />

        </LinearLayout>

    </ScrollView>

    <ScrollView
        android:id="@+id/sv_res"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/bg_tv_border">

        <TextView
            android:id="@+id/tv_res"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:textSize="14sp" />

    </ScrollView>

</RelativeLayout>